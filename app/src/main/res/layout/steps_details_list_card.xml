<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
     android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    app:layout_collapseMode="pin"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


<android.support.v7.widget.CardView android:id="@+id/step_detail_list_card_root"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="4dp"
    card_view:cardCornerRadius="2dp"
    >

    <android.support.constraint.ConstraintLayout android:id="@+id/step_detail_list_card_constraint"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView android:id="@+id/step_detail_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            />
        <ImageView android:id="@+id/step_detail_thumbnail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.google.android.exoplayer2.ui.AspectRatioFrameLayout android:id="@+id/frame_for_player"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_detail_description"


            >
        <com.google.android.exoplayer2.ui.PlayerView android:id="@+id/step_detail_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:show_timeout="0"
            app:fastforward_increment="3000"
            app:rewind_increment="3000"

            />
        </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

        <TextView android:id="@+id/step_detail_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/step_detail_id"
            android:textSize="20sp"
            android:paddingStart="6dp"
            android:layout_marginStart="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/step_detail_id"
            android:paddingRight="10dp"
            android:visibility="gone"


            />
        <TextView android:id="@+id/step_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/step_id"
            app:layout_constraintTop_toBottomOf="@id/step_detail_thumbnail"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"


            />
        <TextView android:id="@+id/step_detail_video_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            />
        <TextView android:id="@+id/step_detail_image_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            card_view:layout_constraintTop_toBottomOf="@id/frame_for_player"
            />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>